#!/usr/bin/env bash
# Pre-commit hook: update cache/version strings so deployments get new cache names
ROOT=$(git rev-parse --show-toplevel 2>/dev/null || echo "$(dirname "$0")/..")
NODE=$(which node || echo "/usr/bin/node")
echo "Running pre-commit: updating cache/version strings"
"$NODE" "$ROOT/scripts/update-cache-versions.js" || {
  echo "Warning: update-cache-versions failed" >&2
}
exit 0
